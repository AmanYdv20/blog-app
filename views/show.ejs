<% include partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">Blog Post-<%= blog.title%></div>
  <div class="ui top attached"><!--segment make a bprder at div -->
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image%>" alt="Aman">
      <div class="content">
        <span><%= blog.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%- blog.body%></p>
      </div>
      <a class="ui green basic button" href="/blogs/<%= blog.id%>/edit">Edit Blog</a>
      <form id="delete" action="/blogs/<%= blog.id%>?_method=DELETE" method="post">
        <button class="ui red basic button">Delete Post</button>
      </form>
    </div>

  </div>

</div>

<% include partials/footer %>
